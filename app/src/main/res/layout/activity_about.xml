<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F9"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_curved"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="48dp"
                android:paddingBottom="60dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="100dp"
                    android:src="@drawable/app_icon"
                    android:background="@drawable/bg_rounded_square_blue"
                    android:backgroundTint="#00695C"
                    android:padding="6dp"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="CrowdTrack"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.0"
                    android:textColor="#B2DFDB"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICT602 Project"
                    android:background="@drawable/bg_badge_pill"
                    android:backgroundTint="#26A69A"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-30dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="#004D40"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About This App"
                            android:textColor="#263238"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="CrowdTrack is a crowdsourced hazard reporting application designed to help communities share real-time information. Features GPS tracking and live map integration."
                        android:textColor="#546E7A"
                        android:lineSpacingExtra="4dp"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GPS Tracking"
                            android:background="@drawable/bg_badge_pill"
                            android:backgroundTint="#ECEFF1"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textSize="11sp"
                            android:textColor="#455A64"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Real-time"
                            android:background="@drawable/bg_badge_pill"
                            android:backgroundTint="#ECEFF1"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textSize="11sp"
                            android:textColor="#455A64"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="#004D40"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Developer Team"
                            android:textColor="#263238"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meet the team behind CrowdTrack"
                        android:textColor="#78909C"
                        android:textSize="13sp"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
                        <TextView android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/bg_circle_avatar" android:gravity="center" android:text="N" android:textColor="#00695C" android:textStyle="bold" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nur Ain Najwa" android:textStyle="bold" android:textColor="#263238" android:textSize="15sp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lead" android:background="@drawable/bg_badge_pill" android:textSize="10sp" android:textColor="#00695C" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023436032 • RCDCS2515A" android:textColor="#90A4AE" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F5" android:layout_marginBottom="16dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
                        <TextView android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/bg_circle_avatar" android:gravity="center" android:text="N" android:textColor="#00695C" android:textStyle="bold" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nurfarisya Yusrina" android:textStyle="bold" android:textColor="#263238" android:textSize="15sp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UI/UX" android:background="@drawable/bg_badge_pill" android:textSize="10sp" android:textColor="#00695C" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023406774 • RCDCS2515A" android:textColor="#90A4AE" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F5" android:layout_marginBottom="16dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
                        <TextView android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/bg_circle_avatar" android:gravity="center" android:text="N" android:textColor="#00695C" android:textStyle="bold" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nur Aleeya Natasya" android:textStyle="bold" android:textColor="#263238" android:textSize="15sp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Frontend" android:background="@drawable/bg_badge_pill" android:textSize="10sp" android:textColor="#00695C" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023415142 • RCDCS2515A" android:textColor="#90A4AE" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F5" android:layout_marginBottom="16dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="16dp">
                        <TextView android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/bg_circle_avatar" android:gravity="center" android:text="M" android:textColor="#00695C" android:textStyle="bold" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Muhammad Syahiran" android:textStyle="bold" android:textColor="#263238" android:textSize="15sp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Database" android:background="@drawable/bg_badge_pill" android:textSize="10sp" android:textColor="#00695C" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2024542643 • RCDCS2515A" android:textColor="#90A4AE" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F5" android:layout_marginBottom="16dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                        <TextView android:layout_width="48dp" android:layout_height="48dp" android:background="@drawable/bg_circle_avatar" android:gravity="center" android:text="I" android:textColor="#00695C" android:textStyle="bold" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="16dp">
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Intan Syafiqah" android:textStyle="bold" android:textColor="#263238" android:textSize="15sp"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Testing" android:background="@drawable/bg_badge_pill" android:textSize="10sp" android:textColor="#00695C" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2023698914 • RCDCS2515A" android:textColor="#90A4AE" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="#004D40"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Source Code"
                            android:textColor="#263238"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View the source code and contribute to the project on GitHub."
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnGithub"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/rounded_border">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View on GitHub"
                                android:textStyle="bold"
                                android:textColor="#263238"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                android:src="@android:drawable/ic_menu_send"
                                app:tint="#263238"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Made with ♥ for ICT602\n© 2026 CrowdTrack Systems"
                android:gravity="center"
                android:textColor="#B0BEC5"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#B0BEC5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="#B0BEC5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="#B0BEC5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:textSize="10sp"
                android:textColor="#B0BEC5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#B0BEC5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News"
                android:textSize="10sp"
                android:textColor="#B0BEC5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#00594D"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#00594D"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
